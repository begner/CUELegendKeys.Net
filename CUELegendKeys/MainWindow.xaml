<Window x:Class="CUELegendKeys.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CUELegendKeys"
        mc:Ignorable="d"
        Title="CUELegendKeys" Height="474" Width="836"
        Loaded="Window_Loaded">
    <Grid x:Name="RootElement">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Grid.Column="0" >
            <WrapPanel Height="170" VerticalAlignment="Top" Width="100">
                <TextBlock x:Name="FPS" Text="FPS"  />
                <TextBlock x:Name="DPS" Text="DPS"  />

                <Button Content="Button1" Margin="0,10,0,0" VerticalAlignment="Top" Width="100"/>
                <Button Content="Button1" Margin="0,10,0,0" VerticalAlignment="Top" Width="100"/>
            </WrapPanel>
            
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <WrapPanel x:Name="previewImages" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True">
                    <local:WPFUIHotspotStates x:Name="previewImageSkillQ"/>
                    <local:WPFUIHotspotStates x:Name="previewImageSkillW"/>
                    <local:WPFUIHotspotStates x:Name="previewImageSkillE"/>
                    <local:WPFUIHotspotStates x:Name="previewImageSkillR"/>
                    <local:WPFUIHotspotStates x:Name="previewImageSkillD"/>
                    <local:WPFUIHotspotStates x:Name="previewImageSkillF"/>

                    <local:WPFUIHotspotStates x:Name="previewImageItem1"/>
                    <local:WPFUIHotspotStates x:Name="previewImageItem2"/>
                    <local:WPFUIHotspotStates x:Name="previewImageItem3"/>
                    <local:WPFUIHotspotStates x:Name="previewImageItem4"/>
                    <local:WPFUIHotspotStates x:Name="previewImageItem5"/>
                    <local:WPFUIHotspotStates x:Name="previewImageItem6"/>
                    <local:WPFUIHotspotStates x:Name="previewImageItem7"/>
                    <local:WPFUIHotspotStates x:Name="previewImageBack"/>

                    <local:WPFUIHotspotStates x:Name="previewCharImage"/>
                </WrapPanel>
            </ScrollViewer>

        </DockPanel>
        <DockPanel Grid.Row="1" Grid.Column="0" >
            <Image x:Name="previewCaptureImage" Margin="10,10,10,10"/>
        </DockPanel>
    </Grid>
    
</Window>
