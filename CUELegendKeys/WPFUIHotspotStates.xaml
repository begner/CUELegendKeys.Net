<UserControl x:Class="CUELegendKeys.WPFUIHotspotStates"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CUELegendKeys"
             mc:Ignorable="d" 
             d:DesignWidth="640"
             d:DesignHeight="150">
    <StackPanel HorizontalAlignment="Left" Margin="0,0,0,10" VerticalAlignment="Top" Orientation="Horizontal">
        <Image x:Name="CaptureSource" Margin="0,0,0,0" Height="50" Width="50" Stretch="Uniform"/>
        <Image x:Name="FilteredMat" Margin="10,0,0,0" Height="50" Width="50" Stretch="Uniform"/>
        <Image x:Name="ActionBase" Margin="10,0,0,0" Height="50" Width="50"  Stretch="Uniform"/>
        <Image x:Name="CasteableDetection" Margin="10,0,0,0" Height="50" Width="50"  Stretch="Uniform"/>
        <StackPanel HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Width="150">
            <TextBlock x:Name="HotspotName" Text="HotspotName"  />
            <TextBlock x:Name="IsCastable" Text="NO" Margin="0,10,0,0"/>
            <TextBlock x:Name="CastableDetectionColor" Text="" Margin="0,10,0,0"/>
        </StackPanel>
    </StackPanel>

</UserControl>
